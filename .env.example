# Yeoskin Dashboard - Environment Variables (Next.js)
# Copy this file to .env.local and fill in your values

# Supabase Configuration (Client-side)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase (Server-side)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Legacy Vite variables (for backward compatibility)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# n8n Configuration
VITE_N8N_BASE_URL=https://yeoskin.app.n8n.cloud
VITE_PAYOUT_SECRET=your-payout-secret-here

# Finance Webhook Configuration
FINANCE_WEBHOOK_SECRET=your-finance-webhook-secret-here
INTERNAL_API_KEY=your-internal-api-key-here
INTERNAL_API_URL=https://your-app-url.vercel.app

# Upstash Redis (Rate Limiting)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token-here

# Shopify Storefront API
SHOPIFY_STOREFRONT_TOKEN=your-storefront-token
SHOPIFY_DOMAIN=your-store.myshopify.com

# Shopify Admin API (for discount code creation)
SHOPIFY_ADMIN_ACCESS_TOKEN=your-admin-access-token
SHOPIFY_ADMIN_API_VERSION=2024-01
CREATOR_DISCOUNT_PERCENT=10

# Email Configuration
EMAIL_FROM=Yeoskin <creators@yeoskin.com>
EMAIL_REPLY_TO=creators@yeoskin.com
RESEND_API_KEY=your-resend-api-key

# Optional: Analytics
# VITE_ANALYTICS_ID=your-analytics-id

# Optional: Logging
# LOG_LEVEL=info
